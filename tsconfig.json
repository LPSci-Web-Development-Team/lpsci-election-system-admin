{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@scoped-models/*": [
        "scoped-models/*"
      ],
      "@api/*": [
        "utils/api/*"
      ],
      "@payloads/*": [
        "utils/payloads/*"
      ],
      "@themes/*": [
        "utils/themes/*"
      ],
      "@interfaces/*": [
        "utils/interfaces/*"
      ],
      "@functions/*": [
        "utils/functions/*"
      ],
      "@firebase/*": [
        "utils/firebase/*"
      ],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}